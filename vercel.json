{
  "version": 2,

  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    { "src": "/graphql", "dest": "server/server.js" },
    { "src": "/uploads", "dest": "server/server.js" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
